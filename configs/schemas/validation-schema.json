  "type": "object",
  "required": [
    "version",
    "group",
    "components"
  ],
  "properties": {
    "version": {
      "type": "integer",
      "description": "Configuration version",
      "minimum": 9,
      "maximum": 10,
      "default": 10
    },
    "group": {
      "type": "string",
      "default": "daq"
    },
    "scripts": {
      "type": "array",
      "format": "table",
      "title": "Scripts",
      "uniqueItems": true,
      "items": {
        "type": "object",
        "title": "Script",
        "properties": {
          "name": {
            "type": "string"
          },
          "host": {
            "type": "string"
          },
          "executable": {
            "type": "string"
          },
          "command": {
            "type": "string"
          },
          "directory": {
            "type": "string"
          }
        },
        "required": ["name", "host", "executable", "command", "directory"]
      }
