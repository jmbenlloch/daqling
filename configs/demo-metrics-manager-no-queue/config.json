{
  "version": 11,
  "group": "daq",
  "scripts": [
    {
      "name": "metric-manager",
      "host": "localhost",
      "executable": "metric-manager.py metrics-config.json",
      "command": "python3",
      "directory": "Monitoring/"
    },
    {
      "name": "psutil-manager",
      "host": "localhost",
      "executable": "psutil-manager.py",
      "command": "python3",
      "directory": "Monitoring/"
    }
  ],
  "components": [
    {
      "name": "readoutinterface01",
      "host": "localhost",
      "port": 5555,
      "modules":[{
        "name": "readoutinterface01",
        "type": "ReadoutInterface",
        "settings": {
          "board_id": 0,
          "delay_us": 100,
          "payload": {
            "min": 200,
            "max": 1500
          }
        },
        "connections": {
          "senders": [
            {
              "type": "ZMQPubSub",
              "chid": 0,
              "transport": "tcp",
              "host": "*",
              "port": 8101
            }
          ]
        }  
      }],
      "metrics_settings": {
        "stats_uri": "tcp://localhost:6007"
      },
      "loglevel": {
        "core": "INFO",
        "module": "INFO",
        "connection": "WARNING"
      }
          
    },
    {
      "name": "readoutinterface02",
      "host": "localhost",
      "port": 5556,
      "modules":[{
        "name": "readoutinterface02",
        "type": "ReadoutInterface",
        "settings": {
          "board_id": 1,
          "delay_us": 100,
          "payload": {
            "min": 200,
            "max": 1500
          }
        },
        "connections": {
          "senders": [
            {
              "type": "ZMQPair",
              "chid": 0,
              "transport": "tcp",
              "port": 8102,
              "host":"*"
            }
          ]
        }
      }],
      "metrics_settings": {
        "stats_uri": "tcp://localhost:6007"
      },
      "loglevel": {
        "core": "INFO",
        "module": "INFO",
        "connection": "WARNING"
      }    
    },
    {
      "name": "eventbuilder01",
      "host": "localhost",
      "port": 5560,
      "modules":[{
        "name": "eventbuilder01",
        "type": "EventBuilder",
        "settings": {},
        "connections": {
          "receivers": [
            {
              "type": "ZMQPubSub",
              "chid": 0,
              "connections":
              [
                {
                  "transport": "tcp",
                  "host": "localhost",
                  "port": 8101
                }
              ]
            },
            {
              "type": "ZMQPair",
              "chid": 1,
              "transport": "tcp",
              "host": "localhost",
              "port": 8102
            }
          ],
          "senders": [
            {
              "type": "ZMQPair",
              "chid": 0,
              "transport": "ipc",
              "path": "/tmp/feed3"
            }
          ]
        }
      }],
      "metrics_settings": {
        "stats_uri": "tcp://localhost:6007"
      },
      "loglevel": {
        "core": "INFO",
        "module": "INFO",
        "connection": "WARNING"
      }
    },
    {
      "name": "filewriter01",
      "host": "localhost",
      "port": 5561,
      "modules":[{
        "name": "filewriter01",
        "type": "FileWriter",
        "settings": {
          "filename_pattern": "/tmp/test-%D.%r.%c.%n.bin"
        },
        "connections": {
          "receivers": [
            {
              "type": "ZMQPair",
              "chid": 0,
              "transport": "ipc",
              "path": "/tmp/feed3"
            }
          ]
        }
      }],
      "metrics_settings": {
        "stats_uri": "tcp://localhost:6007"
      },
      "loglevel": {
        "core": "INFO",
        "module": "INFO",
        "connection": "WARNING"
      }  
    }
  ]
}
