{
  "version": 9,
  "group": "daq",
  "components": [
    {
      "name": "readoutinterface01",
      "host": "localhost",
      "port": 5555,
      "type": "ReadoutInterface",
      "loglevel": {"core": "DEBUG", "module": "DEBUG"},
      "settings": {
        "board_id": 0,
        "delay_us": 100000,
        "payload": {"min": 200, "max": 1500}
      },
      "metrics_settings": {},
      "connections": {
        "senders": [
          {
            "type": "BoostAsioUdp",
            "chid": 0,
            "transport": "udp",
            "host": "127.0.0.1",
            "dest_port": 8101,
            "queue":{
              "type":"FollyProducerConsumer",
              "queue_size":1000
            }
          }
        ]
      }
    },
    {
      "name": "filewriter01",
      "host": "localhost",
      "port": 5561,
      "type": "FileWriter",
      "loglevel": {"core": "DEBUG", "module": "DEBUG"},
      "settings": {
        "filename_pattern": "/tmp/test-%D.%r.%c.%n.bin"
      },
      "metrics_settings": {},
      "connections": {
        "receivers": [
          {
            "type": "BoostAsioUdp",
            "chid": 0,
            "transport": "udp",
            "dest_port": 8101,
            "host":"127.0.0.1",
            "queue":{
              "type":"FollyProducerConsumer",
              "queue_size":1000
            }
          }
        ]
      }
    }
    
  ]
}

