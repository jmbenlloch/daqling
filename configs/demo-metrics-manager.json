{
  "version": 7,
  "group": "daq",
  "scripts": [
    {
      "name": "metric-manager",
      "host": "localhost",
      "executable": "metric-manager.py metrics-config.json",
      "command": "python3",
      "directory": "Monitoring/"
    },
    {
      "name": "psutil-manager",
      "host": "localhost",
      "executable": "psutil-manager.py",
      "command": "python3",
      "directory": "Monitoring/"
    }
  ],
  "components": [
    {
      "name": "readoutinterface01",
      "host": "localhost",
      "port": 5555,
      "type": "ReadoutInterface",
      "loglevel": {"core": "INFO", "module": "INFO"},
      "settings": {
        "board_id": 0,
        "delay_us": 100,
        "payload": {"min": 200, "max": 1500},
        "stats_uri": "tcp://localhost:6007"
      },
      "connections": {
        "senders": [
          {
            "type": "pubsub",
            "chid": 0,
            "transport": "tcp",
            "host": "*",
            "port": 8101
          }
        ]
      }
    },
    {
      "name": "readoutinterface02",
      "host": "localhost",
      "port": 5556,
      "type": "ReadoutInterface",
      "loglevel": {"core": "INFO", "module": "INFO"},
      "settings": {
        "board_id": 1,
        "delay_us": 100,
        "payload": {"min": 200, "max": 1500},
        "stats_uri": "tcp://localhost:6007"
      },
      "connections": {
        "senders": [
          {
            "type": "pair",
            "chid": 0,
            "transport": "tcp",
            "host": "*",
            "port": 8102
          }
        ]
      }
    },
    {
      "name": "eventbuilder01",
      "host": "localhost",
      "port": 5560,
      "type": "EventBuilder",
      "loglevel": {"core": "INFO", "module": "INFO"},
      "settings": {
        "stats_uri": "tcp://localhost:6007"
      },
      "connections": {
        "receivers": [
          {
            "type": "pubsub",
            "chid": 0,
            "transport": "tcp",
            "host": "localhost",
            "port": 8101
          },
          {
            "type": "pair",
            "chid": 1,
            "transport": "tcp",
            "host": "localhost",
            "port": 8102
          }
        ],
        "senders": [
          {
            "type": "pair",
            "chid": 2,
            "transport": "ipc",
            "path": "/tmp/feed3"
          }
        ]
      }
    },
    {
      "name": "filewriter01",
      "host": "localhost",
      "port": 5561,
      "type": "FileWriter",
      "loglevel": {"core": "INFO", "module": "INFO"},
      "settings": {
        "filename_pattern": "/tmp/test-%D.%r.%c.%n.bin",
        "stats_uri": "tcp://localhost:6007"
      },
      "connections": {
        "receivers": [
          {
            "type": "pair",
            "chid": 0,
            "transport": "ipc",
            "path": "/tmp/feed3"
          }
        ]
      }
    }
  ]
}

